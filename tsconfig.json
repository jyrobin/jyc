{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "node/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
